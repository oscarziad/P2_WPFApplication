<UserControl x:Class="P2_WPFApplication.Views.ContactViewModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:P2_WPFApplication.Views"
             mc:Ignorable="d" 
              d:DesignHeight="720" d:DesignWidth="940">
    <Grid Background="#E8EEF8">
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="600"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0">
            <TextBlock Text="Contacts" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0"/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="0">
            <StackPanel x:Name="contactList"/>
        </Grid>

        <Grid Grid.RowSpan="2" Grid.Column="1" Name="usrControlCurrentContact">
        </Grid>

    </Grid>
    
</UserControl>
